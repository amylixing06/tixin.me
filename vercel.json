{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)\\.html", "dest": "/$1" },
    { "src": "/(.*)/", "dest": "/$1" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/.*", "status": 404, "dest": "/404.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 